<main>
    <div class="w-100 h-100 d-flex justify-content-center align-items-center">
        <form method="POST" action="/productos/celular/update/{{producto._id}}" class="pt-3 pb-4">
            <h2 class="text-left font-weight-normal px-4">Editar celular</h2>
            <hr>
            <div class="mx-4">
                <div class="d-flex">
                    <div class="form-group col-6 pl-0">
                        <label>Nombre</label>
                        <input class="form-control" type="text" name="nombre"  value="{{ producto.nombre }}">
                    </div>
                    <div class="form-group col-6 pr-0">
                        <label>Marca</label>
                        <input class="form-control" type="text" name="marca" value="{{ producto.marca }}">
                    </div>
                </div>
                <div class="d-flex">
                    <div class="form-group col-6 pl-0">
                        <label>Precio</label>
                        <input class="form-control" type="text" name="precio" value="{{ producto.precio }}" pattern="^[0-9]+">
                    </div>
                    <div class="form-group col-6 pr-0">
                        <label>Stock</label>
                        <input class="form-control" type="text" name="stock" value="{{ producto.stock }}" pattern="^[0-9]+">
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" name="categoria" value="celular">
                </div>
                <div class="form-group h4 font-weight-normal mb-2">
                    Detalles
                </div>
                <hr class="mt-0">
                <div class="d-flex">
                    <div class="form-group col-4 px-0 pr-2">
                        <label>Bateria</label>
                        <input class="form-control" type="text" name="detalle.bateria" value="{{ producto.detalle.bateria }}" pattern="^[0-9]+">
                    </div>
                    <div class="form-group col-4 px-0 pr-2">
                        <label>Ram</label>
                        <input class="form-control" type="text" name="detalle.ram" value="{{ producto.detalle.ram }}" pattern="^[0-9]+">
                    </div>
                    <div class="form-group col-4 px-0">
                        <label>Almacenamiento</label>
                        <input class="form-control" type="text" name="detalle.almacenamiento" value="{{ producto.detalle.almacenamiento }}" pattern="^[0-9]+">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Actualizar</button>
            </div>
        </form>
    </div>
</main>