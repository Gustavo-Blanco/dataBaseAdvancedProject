<main>
    <div class="w-100 h-100 d-flex justify-content-center align-items-center">
        <div class="show shadow pt-0 pb-3">
            <h2 class="text-center text-white px-3 py-2 baner mb-4">Detalles de la pc</h2>
            <div class="px-3">
                <div class="baner text-white py-1 px-1 h5 ">General</div>
                <div class="px-2 mb-3">
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Nombre</p>
                        <p class="color h6">{{ producto.nombre }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Marca</p>
                        <p class="color h6">{{ producto.marca }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Precio</p>
                        <p class="color h6">S/. {{ producto.precio }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Stock</p>
                        <p class="color h6">{{ producto.stock }}</p>
                    </div>
                </div>
                <div class="baner text-white py-1 px-1 h5 ">Detalles</div>
                <div class="px-2">
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Procesador</p>
                        <p class="color h6">{{ producto.detalle.procesador }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Memoria ram</p>
                        <p class="color h6">{{ producto.detalle.ram }} GB</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Placa base</p>
                        <p class="color h6">{{ producto.detalle.placa }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Fuente de poder</p>
                        <p class="color h6">{{ producto.detalle.fuente }}</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="color h6 font-weight-normal">Tarjeta de video</p>
                        <p class="color h6">{{ producto.detalle.video }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>