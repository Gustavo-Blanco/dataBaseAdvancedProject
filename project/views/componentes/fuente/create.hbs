<main>
    <div class="w-100 h-100 d-flex justify-content-center align-items-center">
        <form method="POST" action="/componentes/fuente/save" class="pt-3 pb-4">
            <h2 class="text-left font-weight-normal px-4">Registrar fuente de poder</h2>
            <hr>
            <div class="mx-4">
                <form>
                    <div class="d-flex">
                        <div class="form-group col-6 pl-0">
                            <label>Nombre</label>
                            <input class="form-control" type="text" name="nombre">
                        </div>
                        <div class="form-group col-6 pr-0">
                            <label>Marca</label>
                            <input class="form-control" type="text" name="marca">
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="form-group col-6 pl-0">
                            <label>Precio</label>
                            <input class="form-control" type="text" name="precio" pattern="^[0-9]+">
                        </div>
                        <div class="form-group col-6 pr-0">
                            <label>Stock</label>
                            <input class="form-control" type="text" name="stock" pattern="^[0-9]+">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="categoria" value="fuente">
                    </div>
                    <div class="form-group h4 font-weight-normal mb-2">
                        Detalles
                    </div>
                    <hr class="mt-0">
                    <div class="d-flex">
                        <div class="form-group col-4 px-0 pr-2">
                            <label>Tipo</label>
                            <input class="form-control" type="text" name="detalle.tipo">
                        </div>
                        <div class="form-group col-4 px-0 pr-2">
                            <label>Certificaci√≥n</label>
                            <input class="form-control" type="text" name="detalle.certificacion">
                        </div>
                        <div class="form-group col-4 px-0">
                            <label>Voltaje</label>
                            <input class="form-control" type="text" name="detalle.voltaje" pattern="^[0-9]+">
                        </div>
                    </div>
                    <button type="submit" class="boton py-2 px-4 text-white">Agregar</button>
                </form>
            </div>
        </form>
    </div>
</main>